#ifndef QTQMLTRICKS
#define QTQMLTRICKS

#include <QQmlEngine>
#include <qqml.h>

#include "QQuickPolygon"
#include "QQmlSvgIconHelper"
#include "QQmlObjectListModel"
#include "QQmlVariantListModel"

static void registerQtQmlTricksModule (QQmlEngine * engine) {
    Q_INIT_RESOURCE (components);

    const char * uri = "QtQmlTricks"; // @uri QtQmlTricks
    const int    maj = 1;
    const int    min = 0;

    qmlRegisterType<QQuickPolygon>     (uri, maj, min, "Polygon");
    qmlRegisterType<QQmlSvgIconHelper> (uri, maj, min, "SvgIconHelper");

    qmlRegisterUncreatableType<QAbstractItemModel>   (uri, maj, min, "AbstractItemModel", "!!!");
    qmlRegisterUncreatableType<QAbstractListModel>   (uri, maj, min, "AbstractListModel", "!!!");
    qmlRegisterUncreatableType<QQmlVariantListModel> (uri, maj, min, "VariantListModel",  "!!!");
    qmlRegisterUncreatableType<QQmlObjectListModelBase> (uri, maj, min, "ObjectListModelBase",  "!!!");

    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/GridContainer.qml"),          uri, maj, min, "GridContainer");
    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/IconTextButton.qml"),         uri, maj, min, "IconTextButton");
    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/RowContainer.qml"),           uri, maj, min, "RowContainer");
    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/ScrollContainer.qml"),        uri, maj, min, "ScrollContainer");
    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/SingleLineEditBox.qml"),      uri, maj, min, "SingleLineEditBox");
    qmlRegisterType(QUrl("qrc:/import/QtQmlTricks/WrapLeftRightContanier.qml"), uri, maj, min, "WrapLeftRightContanier");

    if (engine) {
        engine->addImportPath ("qrc:/import");
    }
}

#endif // QTQMLTRICKS

